---
interface Props {
  title: string;
  publishedAt: Date;
  previewText: string;
  slug: string;
}

const { title, publishedAt, previewText, slug } = Astro.props;
---

<article>
  <a href={`/blog/${slug}`}>
    <h2 class="text-2xl">{title}</h2>
  </a>
  <p class="text-muted-foreground mb-2 text-sm">
    {publishedAt.toLocaleDateString()}
  </p>
  <p class="line-clamp-2 leading-relaxed max-w-[58ch]">{previewText}</p>
  <a href={`/blog/${slug}`} class="text-blue-500 hover:text-blue-600">
    Read more
  </a>
</article>
