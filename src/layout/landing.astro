---
import type { ComponentProps } from "astro/types";
import Base from "./base-revamp.astro";

type Props = ComponentProps<typeof Base>;

const { title, description } = Astro.props;
---

<Base title={title} description={description} fitScreen>
  <div class="md:p-16 md:py-16 lg:px-32 p-8">
    <slot />
  </div>
</Base>
